<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="edu.hendrix.huynhem.seniorthesis.UI.CapturePhotoMenu">

    <TextView
        android:id="@+id/TakePhotoPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/TakePhotoInstruction" />

    <Button
        android:id="@+id/ChooseFromGalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/choose_photo_from_gallery" />

    <Button
        android:id="@+id/TakePictureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/take_photo" />

    <Button
        android:id="@+id/TestWithTrainedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/test_with_trained_data" />

    <Button
        android:id="@+id/TestWithUntrainedDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Test With Untrained Data" />

</LinearLayout>
