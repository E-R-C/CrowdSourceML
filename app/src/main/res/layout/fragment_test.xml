<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.hendrix.huynhem.seniorthesis.UI.TestFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Classifying_ImageView"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Status:" />

        <ProgressBar
            android:id="@+id/Classifying_ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Back_Button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Choose_another_photo" />

        <TextView
            android:id="@+id/Statistics_Text_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Statistics_Text" />

    </LinearLayout>

</RelativeLayout>
